<%- include('../partials/header') %>

<form action="/resorts-and-conditions" method="GET" class="resort-input-form">
    <div class="mb-3">
        <label class="form-label">Search a Resort Below:</label>
        <input type="text" name="searchedResort" class="form-control" autocomplete="off" value="<%= locals.resort ? locals.resort : null %>" placeholder="<%= !locals.resort ? "Ex. Lake Louise" : null %>">
    </div>      

    <button type="submit" class="btn btn-success btn-lg">
        <span>SEARCH RESORT</span>
    </button>
</form>


<% if (locals.resortTitle) { %>

<% const weekdays =  ["Sunday","Monday","Tuesday","Wednesday","Thursday","Friday","Saturday", "Sunday","Monday","Tuesday","Wednesday","Thursday","Friday","Saturday"]%> 

<% const months =  ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"]%> 

<% const date = new Date() %>


<% let day0 = weekdays[date.getDay()] %>
<% let month0 = months[date.getMonth()] %>
<% let dateNum0 = date.getDate() %>
<% let day2 = weekdays[date.getDay()+2] %>
<% let dateNum2 = date.getDate() + 2 %>
<% let day3 = weekdays[date.getDay()+3] %>
<% let day5 = weekdays[date.getDay()+5] %>


<div class="resort-info">

    <h1><%= resortTitle %></h1>

    <section class="five-day-forecast">

        <header>
        <h3>Five Day Forecast Summary <br/> 
            (As of <%= day0 %>, <%= month0 %> <%= dateNum0 %>)</h3>
        </header>
        
        <div class="summaries">
        <h5><%= day0 %> to <%= day2 %></h5>
        <p><%= fiveDayForecast.summary3Day %></p>

        <h5><%= day3 %> to <%= day5 %></h5>
        <p><%= fiveDayForecast.summaryDays4To6 %></p>
        </div>

    </section>

</div>

<% } %>


<%- include('../partials/footer') %>