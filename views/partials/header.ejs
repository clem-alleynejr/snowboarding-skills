<!DOCTYPE html>
<html>
  <head>
    <title><%= locals.viewType %></title>
    <link rel="icon" type="image/x-icon" href="/images/snowboarding-logo.ico" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script
      src="https://kit.fontawesome.com/f6f70b293c.js"
      crossorigin="anonymous"
    ></script>
  </head>

  <body>
    <nav
      class="navbar navbar-expand-lg fixed-top bg-dark border-bottom border-bottom-dark"
      data-bs-theme="dark"
    >
      <div class="container-fluid">
        <a
          class="navbar-brand <%= locals.viewType === 'Home' ? 'active' : null %>"
          href="/"
        >
          <img
            src="/images/snowboarding-logo.svg"
            alt="Logo"
            class="d-inline-block align-text-top"
          />
          HOME
        </a>

        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a
                class="nav-link <%= locals.viewType === 'My Skills' || locals.viewType === 'Edit Skill' || locals.viewType.includes('Skill:') ? 'active' : null %>"
                aria-current="page"
                href="<%= user ? '/snowboarding-skills' : '/auth/google' %>"
                >MY SKILLS</a
              >
            </li>
            <li class="nav-item">
              <a
                class="nav-link <%= locals.viewType === 'Add Skill' ? 'active' : null %>"
                href="<%= user ? '/snowboarding-skills/new' : '/auth/google' %>"
                >ADD SKILL</a
              >
            </li>
            <li class="nav-item">
              <a
                class="nav-link <%= locals.viewType === 'Sample Skills/Progression' ? 'active' : null %>"
                href="/sample-skills-progression"
                >SAMPLE SKILLS/PROGRESSION</a
              >
            </li>
          </ul>

          <% if (user) { %>

          <ul class="navbar-nav me-auto mb-2 mb-lg-0 authorization">
            <li class="nav-item">
              <p style="color: white" id="username-and-photo">
                <img src="<%= user.avatar %>" alt="Avatar" />
                <%= user.name %>
              </p>
            </li>
            <li class="nav-item">
              <a href="/logout" class="nav-link">SIGN OUT</a>
            </li>
          </ul>

          <% } else { %>

          <ul class="navbar-nav me-auto mb-2 mb-lg-0 authorization">
            <li class="nav-item">
              <a href="/auth/google" class="signin" class="nav-link"
                >SIGN IN&nbsp;<img src="https://i.imgur.com/FHjYyi0.png"
              /></a>
            </li>
          </ul>

          <% } %>
        </div>
      </div>
    </nav>

    <!-- Page title at the top of page if this isn't the home landing page -->
    <% if (locals.viewType !== 'Home') {%>
    <!-- seemingly extra .centered-container div is required to center content card -->
    <div class="centered-container">
      <div
        class="content-container <%= locals.viewType.includes('Skill:') ? 'skill-content-container' : `${locals.viewType}-content-container` %>"
      >
        <h1 class="page-title"><%= locals.title %></h1>
        <% } %>

        <!-- Note: footer.ejs partial contains the closing /div, /body, and /html tags  -->

