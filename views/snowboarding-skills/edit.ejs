            <input type="radio" name="myProficiency" class="form-check-input" value="3" <%= snowboardingSkill.myProficiency === 3 ? 'checked' : '' %>>
            <label class="form-check-label" for="3">3</label><br>
        </div>
        <div class="form-check form-check-inline">
            <input type="radio" name="myProficiency" class="form-check-input" value="4" <%= snowboardingSkill.myProficiency === 4 ? 'checked' : '' %>>
            <label class="form-check-label" for="4">4</label><br>
        </div>
        <div class="form-check form-check-inline">
            <input type="radio" name="myProficiency" class="form-check-input" value="5" <%= snowboardingSkill.myProficiency === 5 ? 'checked' : '' %>>
            <label class="form-check-label" for="5">5</label><br>
        </div>
        <div class="form-check form-check-inline">
            <input type="radio" name="myProficiency" class="form-check-input" value="6" <%= snowboardingSkill.myProficiency === 6 ? 'checked' : '' %>>
            <label class="form-check-label" for="6">6</label><br>
        </div>
        <div class="form-check form-check-inline">
            <input type="radio" name="myProficiency" class="form-check-input" value="7" <%= snowboardingSkill.myProficiency === 7 ? 'checked' : '' %>>
            <label class="form-check-label" for="7">7</label><br>
        </div>
