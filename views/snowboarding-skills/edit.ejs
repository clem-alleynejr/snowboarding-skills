<%- include('../partials/header') %>

<form action="/snowboarding-skills/<%= snowboardingSkill._id %>?_method=PUT" method="POST">
    <div class="mb-3">
        <label class="form-label">Skill:</label>
        <input type="text" name="skill" class="form-control" autocomplete="off" value="<%= snowboardingSkill.skill %>">
    </div>      

    <div class="mb-3">
    <label class="form-label">Difficulty Level:</label>
        <select name="difficultyLevel" class="form-select" aria-label="Default select example" value="<%= snowboardingSkill.difficultyLevel %>">
            <option value="" disabled selected hidden><%= snowboardingSkill.difficultyLevel %></option>
            <option value="Beginner">Beginner</option>
            <option value="Intermediate">Intermediate</option>
            <option value="Advanced">Advanced</option>
            <option value="Expert">Expert</option>
        </select>
    </div>

    <label class="form-label">Proficiency Level:</label><br>
        <div class="form-check form-check-inline">
            <input type="radio" name="myProficiency" class="form-check-input" value="0" <%= snowboardingSkill.myProficiency === 0 ? 'checked' : '' %>>
            <label class="form-check-label" for="0">0</label><br>
        </div>
        <div class="form-check form-check-inline">
            <input type="radio" name="myProficiency" class="form-check-input" value="1" <%= snowboardingSkill.myProficiency === 1 ? 'checked' : '' %>>
            <label class="form-check-label" for="1">1</label><br>
        </div>
        <div class="form-check form-check-inline">
            <input type="radio" name="myProficiency" class="form-check-input" value="2" <%= snowboardingSkill.myProficiency === 2 ? 'checked' : '' %>>
            <label class="form-check-label" for="2">2</label><br>
        </div>
